{
  "require": {
    "slim/slim": "4.*",
    "slim/psr7": "^1.6",
    "doctrine/orm": "^3",
    "doctrine/dbal": "^4",
    "symfony/cache": "^7",
    "slim/twig-view": "^3.3",
    "symfony/var-dumper": "^7.0",
    "php-di/slim-bridge": "^3.4",
    "php-di/php-di": "^7.0"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "require-dev": {
    "pestphp/pest": "^2.34"
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    },
    "process-timeout": 0
  },
  "scripts": {
    "start": "php -S localhost:8080 -t public/"
  }
}
